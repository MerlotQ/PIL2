################################################################################
# Platform Settings
################################################################################

MAKE_OS        ?= mingw
MAKE_TYPE      ?= bin #shared static

MAKE           ?= make
CC             ?= gcc
CXX            ?= g++
NVCC           ?= nvcc
AR             ?= ar
RANLIB         ?= ranlib

MOC            ?= moc
RCC            ?= rcc

OBJ_EXT        ?= .o
EXE_EXT        ?= .exe
ALIB_EXT       ?= .a
SLIB_EXT       ?= .dll
SLIB_CFLAGS    ?= -fPIC -shared
LIB_PREFIX     ?= lib


################################################################################
# Path Settings
################################################################################

Here_Path       = $(shell pwd)
HereFolderName  = $(shell pwd | sed 's/^\(.*\)[/]//')

TOPDIR		   ?= .
SRC_PATH       ?= .
BUILD_PATH	   ?= $(TOPDIR)/build/$(MAKE_OS)
LIBS_PATH	   ?= $(TOPDIR)/libs
BIN_PATH       ?= $(TOPDIR)/bin

OUTPUT         ?= $(HereFolderName)

